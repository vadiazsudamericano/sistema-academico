generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client/academico"
}

datasource db {
  provider = "postgresql"
}

model Maestro {
  id           Int      @id @default(autoincrement())
  nombre       String
  apellido     String   @default("")
  tipoContrato String   @default("TIEMPO COMPLETO")
  carreraId    Int?
  estado       String   @default("ACTIVO")    
  salario      Float    @default(0)           
  especialidad String?
}

model Materia {
  id        Int    @id @default(autoincrement())
  nombre    String
  cupos     Int    @default(30)
  carreraId Int
  maestroId Int?
}

model Especialidad {
  id     Int    @id @default(autoincrement())
  nombre String
}
model Carrera {
  id          Int          @id @default(autoincrement())
  nombre      String
}