generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Carrera {
  id          Int          @id @default(autoincrement())
  nombre      String
  estudiantes Estudiante[]
  maestros    Maestro[]    // Relaci칩n a침adida para que funcione el include
}

model Estudiante {
  id        Int     @id @default(autoincrement())
  nombre    String
  carreraId Int
  carrera   Carrera @relation(fields: [carreraId], references: [id])
}

model Maestro {
  id        Int      @id @default(autoincrement())
  nombre    String
  carreraId Int?     // Campo opcional para la relaci칩n
  carrera   Carrera? @relation(fields: [carreraId], references: [id])
}

model Usuario {
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique // A침adido para coincidir con tu DTO
  password String
}

model Ciclo {
  id     Int    @id @default(autoincrement())
  nombre String
}

model Materia {
  id     Int    @id @default(autoincrement())
  nombre String
}

model Especialidad {
  id     Int    @id @default(autoincrement())
  nombre String
}